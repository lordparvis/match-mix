<!DOCTYPE html>
<html lang="en">
<head>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/468ce0f85d.js" crossorigin="anonymous"></script>
  <link href="/styles/mm-brand.ico" rel="icon" type="image/x-icon" />
  <link rel="stylesheet" type="text/css" href="/styles/normalize.css">
  <link rel="stylesheet" type="text/css" href="/styles/skeleton.css">
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Ingredients</title>
</head>
<body>
  <header class="header">
    <i class="fas fa-bars menu"></i>
    <img class="brand-name" src="https://i.imgur.com/JBZl01R.png" alt="Brand Name">
    <nav class="site-nav">
      <ul class="nav-ul">
        <li class="nav-item top-nav"><a class="nav-anchor" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-anchor" href="/bars">The Bars</a></li>
        <li class="nav-item bottom-nav"><a class="nav-anchor" href="/recipes">The Recipes</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <section class="main-header">
      <h1 class="page-name">The Ingredients</h1>
      <button class="feature-button"><a href="/ingredients/new">Create New Ingredient (+)</a></button>
    <section class="main-body" id="ingredients-body">
        <div class="stock-category">
          <h4>Spirits</h4>
          <ul class="category-list">
            <% ingredients.forEach(ingredient => { %>
              <% if(ingredient.type === "spirit") { %>
                <li class="ingredient-item"><a href="/ingredients/<%= ingredient._id %>/edit"><%= ingredient.name %></a></li>
              <% } %>
            <% }) %>
          </ul>
        </div>
        <div class="stock-category">
          <h4>Soda</h4>
          <ul class="category-list">
            <% ingredients.forEach(ingredient => { %>
              <% if(ingredient.type === "soda") { %>
