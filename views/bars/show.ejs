<!DOCTYPE html>
<html lang="en">
<head>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/468ce0f85d.js" crossorigin="anonymous"></script>
  <link href="/styles/mm-brand.ico" rel="icon" type="image/x-icon" />
  <link rel="stylesheet" type="text/css" href="/styles/normalize.css">
  <link rel="stylesheet" type="text/css" href="/styles/skeleton.css">
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= bar.name %></title>
</head>
<body>
  <header class="header">
    <i class="fas fa-bars menu"></i>
    <img class="brand-name" src="https://i.imgur.com/JBZl01R.png" alt="Brand Name">
    <nav class="site-nav">
      <ul class="nav-ul">
        <li class="nav-item top-nav"><a class="nav-anchor" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-anchor" href="/ingredients">The Ingredients</a></li>
        <li class="nav-item"><a class="nav-anchor" href="/recipes">The Recipes</a></li>
        <li class="nav-item bottom-nav"><a class="nav-anchor" href="/bars">The Bars</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <section class="main-header">
      <h1 class="page-name"><%= bar.name %></h1>
      <button class="feature-button"><a href="/bars/<%= bar._id %>/edit">Edit Collection</a></button>
      <button class="feature-button"><a href="/bars/<%= bar._id %>/delete">Delete Collection</a></button>
    </section>
    <section class="main-body">
    <h3 class="main-section-header">Collection Inventory</h3>
      <div class="stock-category">
        <h4>Spirits</h4>
        <ul class="category-list">
          <% bar.ingredients.forEach(ingredient => { %>
            <% if(ingredient.type === "spirit") { %>
              <li class="ingredient-item"><a href="/ingredients/<%= ingredient._id %>/edit"><%= ingredient.name %></a></li>
            <% } %>
          <% }) %>
        </ul>
      </div>
      <div class="stock-category">
        <h4>Soda</h4>
        <ul class="category-list">
          <% bar.ingredients.forEach(ingredient => { %>
            <% if(ingredient.type === "soda") { %>
              <li class="ingredient-item"><a href="/ingredients/<%= ingredient._id %>/edit"><%= ingredient.name %></a></li>
            <% } %>
          <% }) %>
        </ul>
      </div>
      <div class="stock-category">
        <h4>Juice</h4>
        <ul class="category-list">
          <% bar.ingredients.forEach(ingredient => { %>
            <% if(ingredient.type === "juice") { %>
              <li class="ingredient-item"><a href="/ingredients/<%= ingredient._id %>/edit"><%= ingredient.name %></a></li>
            <% } %>
          <% }) %>
        </ul>
      </div>
      <div class="stock-category">
        <h4>Mixers</h4>
        <ul class="category-list">
          <% bar.ingredients.forEach(ingredient => { %>
            <% if(ingredient.type === "mixer") { %>
              <li class="ingredient-item"><a href="/ingredients/<%= ingredient._id %>/edit"><%= ingredient.name %></a></li>
            <% } %>
          <% }) %>
        </ul>
      </div>
      <div class="stock-category">
        <h4>Syrup</h4>
        <ul class="category-list">
          <% bar.ingredients.forEach(ingredient => { %>
            <% if(ingredient.type === "syrup") { %>
              <li class="ingredient-item"><a href="/ingredients/<%= ingredient._id %>/edit"><%= ingredient.name %></a></li>
            <% } %>
          <% }) %>
        </ul>
      </div>
      <div class="stock-category">
        <h4>Bar Stock</h4>
        <ul class="category-list">
          <% bar.ingredients.forEach(ingredient => { %>
            <% if(ingredient.type === "barStock") { %>
              <li class="ingredient-item"><a href="/ingredients/<%= ingredient._id %>/edit"><%= ingredient.name %></a></li>
            <% } %>
          <% }) %>
        </ul>
      </div>
      <div class="stock-category">
        <h4>Garnish</h4>
        <ul class="category-list">
          <% bar.ingredients.forEach(ingredient => { %>
            <% if(ingredient.type === "garnish") { %>
              <li class="ingredient-item"><a href="/ingredients/<%= ingredient._id %>/edit"><%= ingredient.name %></a></li>
            <% } %>
          <% }) %>
        </ul>
      </div>
    </section>
    <section class="recipe-matches">
      <h3 class="main-section-header">Recipe Matches</h3>
      <% if(recipeMatch.length === 0) { %>
        <em>No recipes match this collection. Add more recipes or ingredients!</em>
      <% } %>
      <% recipeMatch.forEach(recipe => { %>
        <p><a href="/recipes/<%=recipe._id %>"><%= recipe.name %></a></p>
      <% }) %>
    </section>
  </main>
  <footer>
    <h6 class="disclaimer">Please Drink Responsibly | Never Drink and Drive</h6>
    <h6 class="created">Created by Connor & Parvis</h6>
  </footer>
  <script src="/scripts/app.js"></script>
</body>
</html>