<!DOCTYPE html>
<html lang="en">
<head>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/468ce0f85d.js" crossorigin="anonymous"></script>
  <link href="/styles/mm-brand.ico" rel="icon" type="image/x-icon" />
  <link rel="stylesheet" type="text/css" href="/styles/normalize.css">
  <link rel="stylesheet" type="text/css" href="/styles/skeleton.css">
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
  <title>New Bar</title>
</head>
<body>
  <header class="header">
    <i class="fas fa-bars menu"></i>
    <img class="brand-name" src="https://i.imgur.com/JBZl01R.png" alt="Brand Name">
    <nav class="site-nav">
      <ul class="nav-ul">
        <li class="nav-item top-nav"><a class="nav-anchor" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-anchor" href="/ingredients">The Ingredients</a></li>
        <li class="nav-item"><a class="nav-anchor" href="/recipes">The Recipes</a></li>
        <li class="nav-item bottom-nav"><a class="nav-anchor" href="/bars">The Bars</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <section>
      <em>Add any missing ingredients prior to building out a bar collection</em>
      <button><a href="/ingredients/new">Add Missing Ingredients</a></button>
      <h2 class="page-name">New Bar Collection</h2>
    </section>
    <section>
      <form action="/bars" method="POST">
        <input class="name-input" type="text" name="name" placeholder="Bar Name" />
        <fieldset>
          <legend>Spirits</legend>
          <div class="check-list">
            <% ingredients.forEach(ingredient => { %>
              <% if(ingredient.type === "spirit") { %>
                <div class="check-item">
                  <input class="check-input" type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
                  <label class="check-label" for="<%= ingredient.name %>"><%= ingredient.name %></label>
                </div>
              <% } %>
            <% }) %>
          </div>
        </fieldset>
        <fieldset>
          <legend>Soda</legend>
          <div class="check-list">
            <% ingredients.forEach(ingredient => { %>
              <% if(ingredient.type === "soda") { %>
                <div class="check-item">
                  <input class="check-input" type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
                  <label class="check-label" for="<%= ingredient.name %>"><%= ingredient.name %></label>
                </div>
              <% } %>
            <% }) %>
          </div>
        </fieldset>
        <fieldset>
          <legend>Juice</legend>
          <div class="check-list">
            <% ingredients.forEach(ingredient => { %>
              <% if(ingredient.type === "juice") { %>
                <div class="check-item">
                  <input class="check-input" type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
                  <label class="check-label" for="<%= ingredient.name %>"><%= ingredient.name %></label>
                </div>
              <% } %>
            <% }) %>
          </div>
        </fieldset>
        <fieldset>
          <legend>Mixers</legend>
          <div class="check-list">
            <% ingredients.forEach(ingredient => { %>
              <% if(ingredient.type === "mixers") { %>
                <div class="check-item">
                  <input class="check-input" type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
                  <label class="check-label" for="<%= ingredient.name %>"><%= ingredient.name %></label>
                </div>
              <% } %>
            <% }) %>
          </div>
        </fieldset>
        <fieldset>
          <legend>Syrup</legend>
          <div class="check-list">
            <% ingredients.forEach(ingredient => { %>
              <% if(ingredient.type === "syrup") { %>
                <div class="check-item">
                  <input class="check-input" type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
                  <label class="check-label" for="<%= ingredient.name %>"><%= ingredient.name %></label>
                </div>
              <% } %>
            <% }) %>
          </div>
        </fieldset>
        <fieldset>
          <legend>Bar Stock</legend>
          <div class="check-list">
            <% ingredients.forEach(ingredient => { %>
              <% if(ingredient.type === "barStock") { %>
                <div class="check-item">
                  <input class="check-input" type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
                  <label class="check-label" for="<%= ingredient.name %>"><%= ingredient.name %></label>
                </div>
              <% } %>
            <% }) %>
          </div>
        </fieldset>
        <fieldset>
          <legend>Garnish</legend>
          <div class="check-list">
            <% ingredients.forEach(ingredient => { %>
              <% if(ingredient.type === "garnish") { %>
                <div class="check-item">
                  <input class="check-input" type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
                  <label class="check-label" for="<%= ingredient.name %>"><%= ingredient.name %></label>
                </div>
              <% } %>
            <% }) %>
          </div>
        </fieldset>
        <input type="submit" value="Create Bar Collection" />
      </form>
    </section>
  </main>
  <footer>
    <h6 class="disclaimer">Please Drink Responsibly | Never Drink and Drive</h6>
    <h6 class="created">Created by Connor & Parvis</h6>
  </footer>
  <script src="/scripts/app.js"></script>
</body>
</html>