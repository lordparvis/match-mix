<!DOCTYPE html>
<html lang="en">

<head>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/468ce0f85d.js" crossorigin="anonymous"></script>
  <script src="/scripts/app.js"></script>
  <link href="/styles/mm-brand.ico" rel="icon" type="image/x-icon" />
  <link rel="stylesheet" type="text/css" href="/styles/normalize.css">
  <link rel="stylesheet" type="text/css" href="/styles/skeleton.css">
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Recipe</title>
</head>

<body>
  <header class="header">
    <i class="fas fa-bars menu"></i>
    <img class="brand-name" src="https://i.imgur.com/JBZl01R.png" alt="Brand Name">
    <nav class="site-nav">
      <ul class="nav-ul">
        <li class="nav-item top-nav"><a class="nav-anchor" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-anchor" href="/bars">The Bars</a></li>
        <li class="nav-item bottom-nav"><a class="nav-anchor" href="/ingredients">The Ingredients</a></li>
        <li class="nav-item bottom-nav"><a class="nav-anchor" href="/recipes">The Recipes</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <form action="/recipes" method="POST">
      <input type="text" name="name" placeholder="Recipe Name" />
      <h2>Available Ingredients</h2>
      <fieldset>
        <legend>Spirits</legend>
        <% ingredients.forEach(ingredient => { %>
        <% if(ingredient.type === "spirit") { %>
          <div>
          <input type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
          <label for="<%= ingredient.name %>"><%= ingredient.name %></label>
          </div>
          <% } %>
          <% }); %>
      </fieldset>
      <div>
        <fieldset>
        <legend>Soda</legend>
        <% ingredients.forEach(ingredient => { %>
          <% if(ingredient.type === "soda") { %>
          <div>
            <input type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
            <label for="<%= ingredient.name %>"><%= ingredient.name %></label>
          </div>
          <% } %>
            <% }); %>
        </fieldset>
      </div>
      <div>
        <fieldset>
        <legend>Juice</legend>
        <% ingredients.forEach(ingredient => { %>
          <% if(ingredient.type === "juice") { %>
          <div>
            <input type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
            <label for="<%= ingredient.name %>"><%= ingredient.name %></label>
          </div>
          <% } %>
            <% }); %>
        </fieldset>
      </div>
      <div>
        <fieldset>
        <legend>Mixers</legend>
        <% ingredients.forEach(ingredient => { %>
          <% if(ingredient.type === "mixers") { %>
          <div>
            <input type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
            <label for="<%= ingredient.name %>"><%= ingredient.name %></label>
          </div>
          <% } %>
            <% }); %>
        </fieldset>
      </div>
      <div>
        <fieldset>
        <legend>Syrup</legend>
        <% ingredients.forEach(ingredient => { %>
          <% if(ingredient.type === "syrup") { %>
          <div>
            <input type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
            <label for="<%= ingredient.name %>"><%= ingredient.name %></label>
          </div>
          <% } %>
            <% }); %>
        </fieldset>
      </div>
      <div>
      <fieldset>
      <legend>Bar Stock</legend>
      <%ingredients.forEach(ingredient => { %>
      <% if(ingredient.type === "barStock"){ %>
      <div>
      <input type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
        <label for="<%= ingredient.name %>"><%= ingredient.name %></label>
      </div>
        <% } %>
         <% }); %>
        </fieldset>
      </div>

      <div>
      <fieldset>
      <legend>Garnish</legend>
      <% ingredients.forEach(ingredient => { %>
      <% if(ingredient.type === "garnish") { %>
      <div>
      <input type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
        <label for="<%= ingredient.name %>"><%= ingredient.name %></label>
      </div>
      <% } %>
       <% }); %>
      </fieldset>
      </div>
      <input type="textarea" name="description">
      <input type="submit" value="Create recipe">
      </form>
  </main>
  <footer>
    <h6 class="disclaimer">Please Drink Responsibly | Never Drink and Drive</h6>
    <h6 class="created">Created by Connor & Parvis</h6>
  </footer>
  <script src="/scripts/app.js"></script>
</body>

</html>