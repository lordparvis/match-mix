<body>
  <header class="header">
    <i class="fas fa-bars menu"></i>
    <img class="brand-name" src="https://i.imgur.com/JBZl01R.png" alt="Brand Name">
    <nav class="site-nav">
      <ul class="nav-ul">
        <li class="nav-item top-nav"><a class="nav-anchor" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-anchor" href="/bars">The Bars</a></li>
        <li class="nav-item bottom-nav"><a class="nav-anchor" href="/ingredients">The Ingredients</a></li>
        <li class="nav-item bottom-nav"><a class="nav-anchor" href="/recipes">The Recipes</a></li>
        <li class="nav-item bottom-nav"><a class="nav-anchor" href="/recipes/<%= recipe._id %>"><%= recipe.name %></a></li>
      </ul>
    </nav>
  </header>

<main>
    <!-- Spirits -->
    <section class="main-body">
  <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">

      <input type="text" name="name" placeholder="<%= recipe.name %>" value="<%= recipe.name %>" />
      <br> <textarea name="description" id="" cols="30" rows="10"><%= recipe.description %></textarea>
      <div class="field-form">
      <fieldset>
      <legend>Spirits</legend>
      <div class="check-list">
      <% recipe.ingredients.forEach(ingredient => { %>
        <% if(ingredient.type === "spirit") { %>
        <div>
          <input type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>" checked>
          <label for="<%= ingredient.name %>"><%= ingredient.name %></label>
        </div>
        <% } %>
          <% }) %>
          <% ingredients.forEach(ingredient => { %>
            <% if(ingredient.type === "spirit") { %>
            <div class="check-item">
              <input type="checkbox" id="<%= ingredient.name %>" name="ingredients" value="<%= ingredient._id %>">
